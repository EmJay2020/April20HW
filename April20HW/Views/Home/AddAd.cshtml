@model April20HW.Models.AddViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="container" style="margin-top:20px">
        <form action="/home/add" method="post">
            <div class="row">
                <div class="col-md-3">
                    <input type="text" name="Title" placeholder="Title" class="form-control" />
                </div>
                <div class="col-md-offset-3 col-md-6">
                    <input type="text" name="PhoneNumber" placeholder="PhoneNumber" class="form-control" />
                </div>
            </div>
            <br />
            <textarea class="form-control" rows="10" name="Description"></textarea>
            <input type="hidden" value="@Model.User.Id" name="UserId" />
            <button class="btn btn-primary">Place Ad</button>
        </form>
    </div>
</body>
</html>

